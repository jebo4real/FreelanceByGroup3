<% include ../layout/header-portal.ejs %>
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">
                <div class="page-title-actions">
                    <a class="mt-2 btn btn-success" data-toggle="modal" data-target="#category-info" style="color: white;">New</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="main-card mb-3 card col-md-12">
                <div class="card-body"><h5 class="card-title">Job Categories</h5>
                    <p>Click on a job to view its information</p>
                    <table class="table" id="job_cat_tb">
                        <thead>
                        <tr>
                            <th>Date Added</th>
                            <th>ID</th>
                            <th>Name</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% categories.map( cat => { %>
                        <tr data-toggle="modal" data-target="#category-info">
                            <td><%=cat.createdAt%></td>
                            <td><%=cat.id%></td>
                            <td><%=cat.name%></td>
                        </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
<% include ../layout/footer-portal.ejs %>
<% include ../modals/category.ejs %>
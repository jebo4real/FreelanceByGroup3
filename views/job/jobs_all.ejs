<% include ../layout/header-portal.ejs %>
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="row">
            <div class="main-card mb-3 card col-md-12" style="height: 650px;">
                <div class="card-header">
                    <h5 class="card-title" style="color:#4d4d4d!important">All Jobs</h5>
                </div>
                <div class="card-body">
                    <table class="mb-0 table table-borderless table-striped table-hover" id="freelancer_jobs_tb">
                        <thead>
                        <tr>
                            <th>Date Applied</th>
                            <th hidden >ID</th>
                            <th>Title</th>
                            <th hidden >Details</th>
                            <th hidden >TimeLength</th>
                            <th>Price</th>
                            <th hidden >Skills</th>
                            <th>Status</th>
                            <th>View Details</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% jobs.map( job => { %>
                        <tr style="cursor: pointer;">
                            <td><%=job.createdAt%></td>
                            <td hidden><%=job.id%></td>
                            <td><%=job.title%></td>
                            <td hidden ><%=job.details%></td>
                            <td hidden><%=job.timeLength%></td>
                            <td><%=job.price%></td>
                            <td hidden><%=job.skills%></td>
                            <td>
                                <div class="row">
                                    <% if(job.status===null){ %>
                                        pending
                                    <% }else{ %>
                                        <%=job.status%>
                                    <% } %>
                                </div>
                            </td>
                            <td class="text-left" >
                                <a href="/user/job-view/<%=job.id%>" class="btn btn-success">View</a>
                            </td>
                        </tr>
                        <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
<% include ../layout/footer-portal.ejs %>
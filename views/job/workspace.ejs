<% include ../layout/header-portal.ejs %>
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">

            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                    <div class="main-card mb-3 card">
                        <div class="card-body"><h5 class="card-title">Client</h5>
                            <p>Name: <%=job.User.firstname%> <%=job.User.lastname%></p>
                            <p>Location: <%=job.User.country%></p>
                            <% if(user.UserAccount.RoleId===2){ %>
                            <a href="#" data-toggle="modal" data-target="#clientReviewModal" style="float:right;" class="btn btn-primary">Review<i class="fa fa-star"></i></a>
                            <% } %>
                        </div>
                    </div>
                    <div class="main-card mb-3 card">
                        <div class="card-body"><h5 class="card-title">Freelancer</h5>
                            <p>Name: <%=jobAppDetail.User.firstname%> <%=jobAppDetail.User.lastname%></p>
                            <p>Location: <%=jobAppDetail.User.country%></p>
                            <% if(user.UserAccount.RoleId===1){ %>
                            <a href="#" data-toggle="modal" data-target="#freelanceReviewModal" style="float:right;" class="btn btn-primary">Review<i class="fa fa-star"></i></a>
                            <% } %>
                        </div>
                    </div>
            </div>
            <div class="col-md-9 card">
                <div class="card-header">
                    <ul class="nav nav-justified">
                        <li class="nav-item"><a data-toggle="tab" href="#tab-eg7-0" class="active nav-link">Job Details</a></li>
                        <li class="nav-item"><a data-toggle="tab" href="#tab-eg7-1" id="tab2" class="nav-link">Discussion</a></li>
                        <li class="nav-item"><a data-toggle="tab" href="#tab-eg7-2" class="nav-link">Job Files</a></li>
                        <li class="nav-item"><a data-toggle="tab" href="#tab-eg7-3" class="nav-link">Payments</a></li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" style="height:450px;">
                        <div class="tab-pane active" id="tab-eg7-0" role="tabpanel">
                            <% include ../forms/workspace-job-detail.ejs %>
                        </div>
                        <div class="tab-pane" id="tab-eg7-1" role="tabpanel">
                            <% include ../forms/workspace-job-chat.ejs %>
                        </div>
                        <div class="tab-pane" id="tab-eg7-2" role="tabpanel">
                            <% include ../forms/workspace-job-file.ejs %>
                        </div>
                        <div class="tab-pane" id="tab-eg7-3" role="tabpanel">

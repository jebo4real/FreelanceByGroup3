<% include ./layout/header-public.ejs %>
<% include ./layout/menu-public.ejs %>


<div class="site-section bg-light" style="padding-top: 20px;">
    <div class="container">
                <div class="col-md-12">
                <% jobs.map( job => { %>

                <div class="row" data-aos="fade" style="margin-bottom: 2px;">
                    <div class="col-md-12">

                        <div class="job-post-item bg-white p-4 d-block d-md-flex align-items-center">

                            <div class="mb-4 mb-md-0 mr-5">
                                <div class="job-post-item-header d-flex align-items-center">
                                    <h2 class="mr-3 text-black h6"><%=job.title %></h2>
                                </div>
                                <div class="job-post-item-body d-block d-md-flex">
                                    <div class="mr-3"><span class="fl-bigmug-line-portfolio23"></span> <a style="color: #0b0b0b" href="#"><%=job.JobCategory.name %>.</a></div>
                                    <div><span class="fl-bigmug-line-big104"></span> <span><%=job.User.country %></span></div>
                                </div>
                            </div>

                            <div class="ml-auto">
                                <a href="/job/<%=job.id %>" class="btn btn-success py-2">Apply Job</a>
                            </div>
                        </div>

                    </div>
                </div>
                <% }); %>
                </div>

        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <div class="site-block-27">
                    <ul>
                        <li><a href="#"><i class="icon-keyboard_arrow_left h5"></i></a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li><a href="#"><i class="icon-keyboard_arrow_right h5"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>


    </div>
</div>


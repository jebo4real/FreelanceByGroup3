<div class="main-card mb-3 card col-md-12" style="margin: auto;">
    <div class="card-body">
        <% if(portfoilioChangeMessage === true){%>
            <div class="alert alert-success" role="alert">
                Update Successful
            </div>
        <% } else if(portfoilioChangeMessage === false){%>
            <div class="alert alert-danger" role="alert">
                Error Updating
            </div>
        <% } %>
        <h5 class="card-title">Portfolio Details</h5>
        <form class="" action="/user/update-portfolio" method="post" enctype = "multipart/form-data" style="margin:auto;width: 100%">
            <input name="id" id="id" placeholder="" type="text" class="form-control" value="<%=user.Portfolio.id%>" hidden><br />
            <div class="row">
            <div class="form-row">
                <div class="col-md-10">
                    <div class="position-relative form-group">
                    <img src="/images/<%=user.Portfolio.picture%>" class="rounded-circle" width="200px" height="200px" alt="No picture"/>
                    </div>
                    <div class="position-relative form-group">
                        <input name="picture" id="picture" type="file" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-10">
                    <div class="position-relative form-group">
                        <label for="title" class="">Title</label>
                        <input name="title" id="title" value="<%=user.Portfolio.title%>" placeholder="" type="text" class="form-control">
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="position-relative form-group">
                        <label for="lastname" class="">Description</label>
                        <textarea class="form-control" id="description" name="description"><%=user.Portfolio.description%></textarea>
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="position-relative form-group">
                        <label for="projectLinks" class="">Project Links</label>
                        <textarea class="form-control" id="projectLinks" name="projectLinks"><%=user.Portfolio.projectLinks%></textarea>
                    </div>
                </div>
            </div>
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" class="mt-2 btn btn-success py-2 px-4" value="Update" >
            </div>
        </form>
    </div>
</div>
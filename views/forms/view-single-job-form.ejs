<div class="main-card mb-3 card col-md-12">
    <div class="card-body">
        <h5 class="card-title" style="color:#4d4d4d!important">Job Details</h5>
        <div class="justify-content-end" style="float:right;">
            <a id="edit"  class="btn btn-success" href="#">Edit</a>
        </div>
            <div class="form-row">
                <div class="col-md-6">
                    <form class="fmupdatejob" id="fmupdatejob" method="post">
                        <input name="id" id="id" value="<%=job.id%>" type="text" class="custom-select" hidden />
                        <div class="position-relative form-group">
                            <label for="category" class="">Category/Industry:</label>
                            <select name="category" id="category" class="custom-select" >
                                <% category.map(cat =>{ %>
                                <option value="<%=cat.id%>" <% if(cat.id==job.CatId){'selected'}else{''}%> > <%=cat.name%></option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="position-relative form-group">
                            <label for="title" class="">Title:</label>
                            <input name="title" id="title" value="<%=job.title%>" placeholder="Job title" type="text" class="form-control" />
                        </div>
                        <div class="position-relative form-group">
                            <label for="details" class="">Details: </label><br>
                            <textarea name="details" id="details" rows="5" cols="40" placeholder="Job Details" class="form-control" style="text-align: left;"><%=job.details%></textarea>
                        </div>
                        <div class="position-relative form-group">
                            <label for="timeLength" class="">Estimated length of job: </label>
                            <select name="timeLength" id="timeLength" class="custom-select" >
                                <option value="Less than 1 month" <%(job.timeLength==="Less than 1 month") ? 'selected':''; %> >Less than 1 month</option>
                                <option value="1 month" <%(job.timeLength==="1 month") ? 'selected':''; %> >1 month</option>
                                <option value="More than 1 month" <%(job.timeLength==="More than 1 month") ? 'selected':''; %> >More than 1 month</option>
                            </select>
                        </div>
                        <div class="position-relative form-group">
                            <label for="price" class="">Price: </label>
                            <input  name="price" id="price" value="<%=job.price%>" placeholder="price" type="number" min="1" class="form-control" />
                        </div>
                        <div class="position-relative form-group">
                            <label for="skills" class="">Skills(Enter skills associated with job separated by comma): </label>
                            <input name="skills" id="skills" value="<%=job.skills%>" placeholder="skills" type="text" class="form-control" />
                        </div>
                        <% if(user.UserAccount.RoleId===3){}else{ %>
                        <input type="submit" id="btnupdate" name="btnupdate" class="mt-2 btn btn-success" value="Update">
                        <% } %>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="main-card mb-3 ">
                        <div class="card-header">Applicants (<%=Object.keys(jobDetail).length%> applicants)
                            <div class="btn-actions-pane-right">
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table id="app_tb" class="align-middle mb-0 table table-borderless table-striped table-hover">
                                <thead>
                                <tr>
                                    <th class="text-center">#</th>
                                    <th class="text-center" hidden>ID</th>
                                    <th class="text-center" hidden>fname</th>
                                    <th class="text-center" hidden>lastname</th>
                                    <th class="text-center" hidden>picture</th>
                                    <th class="text-center" hidden>jobTitle</th>
                                    <th class="text-center" hidden>UserID</th>
                                    <th>Name</th>
                                    <th class="text-center">Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% let count = 1;
                                jobDetail.map( app => { %>
                                <tr data-toggle="modal" data-target="#freelancer-info" style="cursor: pointer;">
                                    <td class="text-center text-muted"><%=count%></td>
                                    <td class="text-center" hidden><%=app.id%></td>
                                    <td class="text-center" hidden><%=app.User.firstname%></td>
                                    <td class="text-center" hidden><%=app.User.lastname%></td>
                                    <td class="text-center" hidden><%=app.User.picture%></td>
                                    <td class="text-center" hidden><%=app.User.jobTitle%></td>
                                    <td class="text-center" hidden><%=app.User.id%></td>
                                    <td>
                                        <div class="widget-content p-0">
                                            <div class="widget-content-wrapper">
                                                <div class="widget-content-left mr-3">
                                                    <div class="widget-content-left">
                                                        <img width="40" height="40" class="rounded-circle" src="/images/<%=app.User.picture%>" alt="">
                                                    </div>
                                                </div>
                                                <div class="widget-content-left flex2">
                                                    <div class="widget-heading"><%=app.User.firstname%> <%=app.User.lastname%></div>
                                                    <div class="widget-subheading opacity-7">Web Developer</div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <div class="badge badge-warning"><%=app.status%></div>
                                    </td>
                                </tr>
                                <%
                                    count++;
                                }); %>
                                </tbody>
                            </table>
                        </div>
                        <div class="d-block text-center card-footer">

                        </div>
                    </div>
                </div>
            </div>

    </div>
</div>
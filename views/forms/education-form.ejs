<div class="main-card mb-3 card col-md-12" style="height:650px;">
    <div class="card-header">
        <h5 class="card-title" style="color:#4d4d4d!important">Educational Qualification</h5>
        
    </div>
    <div class="card-body">
        <div class="justify-content-end" style="position: absolute;left: 90%;top: 10px;">
            <a id="edit"  class="btn btn-success" href="#">Edit</a>
        </div>
        <% if(1===2){%>
            <div class="alert alert-success" role="alert">
                Update Successful
            </div>
        <% } else if(1===2){%>
            <div class="alert alert-danger" role="alert">
                Error Updating
            </div>
        <% } %>
        
        <form id="fmprofile" class="" action="/user/update-education" method="post">
            <input name="id" id="id" placeholder="" type="text" class="form-control" value="<%=user_education.id%>" hidden><br/>
            <div class="form-row justify-content-center">
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="edu_country" class="">Country: </label>
                        <select name="edu_country" id="edu_country" class="custom-select">
                            <option value="<%=user_education.country%>" selected><%=user_education.country%></option>
                            <% country.map(c =>{ %>
                            <option value="<%=c.name%>"><%=c.name%></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="uni" class="">School: </label>
                        <input name="uni" id="uni" value="<%=user_education.uni%>" placeholder="" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="cert" class="">Certification: </label>
                        <input name="cert" id="cert" value="<%=user_education.cert%>" placeholder="" type="text" class="form-control">
                        
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="cert" class="">Specialisation: </label>
                        <input name="spec" id="spec" value="<%=user_education.cert%>" placeholder="" type="text" class="form-control">
                        
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="start_year" class="">Start Year: </label>
                        <select name="start_year" id="start_year" class="custom-select">
                            <% for(let i=1970;i<=2020;++i){ %>
                            <option value="<%=i%>" <% if(parseInt(user_education.start_year)===i){ %> selected <% }else{} %> ><%=i%></option>
                            <% }; %>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="end_year" class="">End Year: </label>
                        <select name="end_year" id="end_year" class="custom-select">
                            <% for(let i=1970;i<=2020;++i){ %>
                            <option value="<%=i%>" <% if(parseInt(user_education.endyear)===i){ %> selected <% }else{} %> ><%=i%></option>
                            <% }; %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" class="mt-2 btn btn-success py-2 px-4" value="Update">
            </div>
        </form>
    </div>
</div>
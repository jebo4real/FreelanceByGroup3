<div class="main-card mb-3 card col-md-12">
    <div class="card-body">
        <% if(error){ %>
            <div class="alert alert-danger" role="alert">
                <strong><%=error%></strong>
            </div>
            <% }else if(success){%>
            <div class="alert alert-success" role="alert">
                <strong><%=success%></strong>
            </div>
        <% } %>
        <h5 class="card-title">Educational Background</h5>
        <form class="" action="/user/update-education" method="post">
            <input name="id" id="id" placeholder="" type="text" class="form-control" value="<%=user.Education.id%>" hidden><br />
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="edu_country" class="">Country</label>
                        <select name="edu_country" id="edu_country" class="form-control">
                            <option value="<%=user.Education.country%>" selected><%=user.Education.country%></option>
                            <% country.map(c =>{ %>
                            <option value="<%=c.name%>"><%=c.name%></option>
                            <% }); %>
                        </select>
                        </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="uni" class="">School</label>
                        <input name="uni" id="uni" value="<%=user.Education.uni%>" placeholder="" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <div class="position-relative form-group">
                        <label for="cert" class="">Certification</label>
                        <select name="cert" id="cert" class="form-control">
                            <option value="High school certificate" 
                                <% if(user.Education.cert==='High school certificate'){ %> selected <% }else{} %> >
                                High school certificate
                            </option>
                            <option value="Diploma" 
                                <% if(user.Education.cert==='Diploma'){ %> selected <% }else{} %> >
                                Diploma
                            </option>
                            <option value="Bachelors" 
                                <% if(user.Education.cert==='Bachelors'){ %> selected <% }else{} %> >
                                Bachelors
                            </option>
                            <option value="Masters" 
                                <% if(user.Education.cert==='Masters'){ %> selected <% }else{} %> >
                                Masters
                            </option>
                            <option value="PhD" 
                                <% if(user.Education.cert==='PhD'){ %> selected <% }else{} %> >
                                PhD
                            </option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="start_year" class="">Start Year</label>
                        <select name="start_year" id="start_year" class="form-control">
                            <% for(let i=1970;i<=2020;++i){ %>
                            <option value="<%=i%>" <% if(parseInt(user.Education.start_year)===i){ %> selected <% }else{} %> ><%=i%></option>
                            <% }; %>
                        </select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="position-relative form-group">
                        <label for="end_year" class="">End Year</label>
                        <select name="end_year" id="end_year" class="form-control">
                            <% for(let i=1970;i<=2020;++i){ %>
                            <option value="<%=i%>" <% if(parseInt(user.Education.endyear)===i){ %> selected <% }else{} %> ><%=i%></option>
                            <% }; %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <input type="submit" class="mt-2 btn btn-success py-2 px-4" value="Update">
            </div>
        </form>
    </div>
</div>
<% include ../layout/header-portal.ejs %>
<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="app-page-title">
            <div class="page-title-wrapper">

            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-xl-4">
                <div class="card mb-3 widget-content bg-midnight-bloom">
                    <div class="widget-content-wrapper text-white">
                        <div class="widget-content-left">
                            <div class="widget-heading">Jobs Posted</div>
                            <div class="widget-subheading"></div>
                        </div>
                        <div class="widget-content-right">
                            <div class="widget-numbers text-white"><span><%=jobCount%></span></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-4">
                <div class="card mb-3 widget-content bg-arielle-smile">
                    <div class="widget-content-wrapper text-white">
                        <div class="widget-content-left">
                            <div class="widget-heading">Jobs Awarded</div>
                            <div class="widget-subheading"></div>
                        </div>
                        <div class="widget-content-right">
                            <div class="widget-numbers text-white"><span><%=jobAwarded%></span></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-xl-4">
                <div class="card mb-3 widget-content bg-grow-early">
                    <div class="widget-content-wrapper text-white">
                        <div class="widget-content-left">
                            <div class="widget-heading">Jobs Completed</div>
                            <div class="widget-subheading">Only job accepted</div>
                        </div>
                        <div class="widget-content-right">
                            <div class="widget-numbers text-white"><span><%=jobDoneCount%></span></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="main-card mb-3 card">
                    <div class="card-header">Top Clients
                        <div class="btn-actions-pane-right">
                            <div role="group" class="btn-group-sm btn-group">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th class="text-center">Client</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% count = 1;
                            clients.map(c =>{ %>
                            <tr>
                                <td class="text-center text-muted"><%=count%></td>
                                <td>
                                    <div class="widget-content p-0">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left mr-3">
                                                <div class="widget-content-left">
                                                    <img width="40" class="rounded-circle" src="/images/<%=c.picture%>" alt="<%=c.firstname%>"></div>
                                            </div>
                                            <div class="widget-content-left flex2">
                                                <div class="widget-heading"><%=c.firstname%> <%=c.lastname%></div>
                                                <div class="widget-subheading opacity-7"><%=c.jobTitle%></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% count++; }); %>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-block text-center card-footer">
                        <a href="/admin/users/client" class="btn-wide btn btn-success">View All Clients</a>
                    </div>
                </div>
            </div>


            <div class="col-md-6">
                <div class="main-card mb-3 card">
                    <div class="card-header">Top Freelancers
                        <div class="btn-actions-pane-right">
                            <div role="group" class="btn-group-sm btn-group">
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th class="text-center">Freelancer</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% count = 1;
                            freelancers.map(f =>{ %>
                            <tr>
                                <td class="text-center text-muted"><%=count%></td>
                                <td>
                                    <div class="widget-content p-0">
                                        <div class="widget-content-wrapper">
                                            <div class="widget-content-left mr-3">
                                                <div class="widget-content-left">
                                                    <img width="40" class="rounded-circle" src="/images/<%=f.picture%>" alt="<%=f.firstname%>"></div>
                                            </div>
                                            <div class="widget-content-left flex2">
                                                <div class="widget-heading"><%=f.firstname%> <%=f.lastname%></div>
                                                <div class="widget-subheading opacity-7"><%=f.jobTitle%></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <% count++; }); %>
                            </tbody>
                        </table>
                    </div>
                    <div class="d-block text-center card-footer">
                        <a href="/admin/users/freelancer" class="btn-wide btn btn-success">View All Freelancers</a>
                    </div>
                </div>
            </div>

        </div>
<% include ../layout/footer-portal.ejs %>
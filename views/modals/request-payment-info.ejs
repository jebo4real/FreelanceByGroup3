<!-- Modal -->
<div class="modal fade" id="make-payment-info" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Payment Information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-md-6">
                        <form action="/user/pay" method="post">
                            <div class="position-relative form-group">
                                <label for="id">Amount:</label>
                                <input type="text" id="amount" name="amount" class="form-control" value="<%=amountToPay%>" readonly />
                            </div>
                            <script
                                    src="//checkout.stripe.com/v2/checkout.js"
                                    class="stripe-button"
                                    data-key="pk_test_cGawfDbRwNlwGc7L9OHxVLwB00AvTIgTkg"
                                    data-amount="<%=amountToPay*100%>"
                                    data-currency="usd"
                                    data-name="<%=user.firstname%> <%=user.lastname%>"
                                    data-description="<%=jobName%>"
                                    data-locale="auto" >
                            </script>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>